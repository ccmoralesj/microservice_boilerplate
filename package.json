{
  "name": "hmiservice-mail",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "engines": {
    "node": ">=8"
  },
  "private": true,
  "scripts": {
    "start": "node src",
    "test": "ava",
    "fix": "eslint fix",
    "lint": "eslint src",
    "commit": "git add . && git-cz"
  },
  "dependencies": {
    "@sendgrid/client": "6.2.1",
    "@sendgrid/mail": "6.2.1",
    "bluebird": "^3.5.1",
    "dotenv": "^4.0.0",
    "lodash": "^4.17.4",
    "remit": "^2.0.2",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.32",
    "ava": "^0.22.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "proxyrequire": "^1.0.15"
  },
  "ava": {
    "files": [
      "src/**/*spec.js",
      ".test/**/*.js"
    ],
    "source": [
      ".test/**/*.{js}",
      "src/**/*.{js}"
    ],
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": true,
    "tap": false,
    "powerAssert": false,
    "match": [
      "!integration*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
